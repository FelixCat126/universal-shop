{
  "name": "universal-shop",
  "version": "1.0.0",
  "description": "轻量化商城系统 - 支持域名和IP访问的双端商城",
  "type": "module",
  "scripts": {
    "clean": "node scripts/clean-cache.js",
    "setup": "node setup.js",
    "seed": "node src/server/seeds/index.js",
    "dev": "npm run clean && concurrently \"npm run dev:server\" \"npm run dev:portal\" \"npm run dev:admin\"",
    "dev:portal": "vite --force",
    "dev:admin": "vite --config vite.admin.config.js --force",
    "dev:server": "node src/server/index.js",
    "dev:both": "npm run clean && concurrently \"npm run dev:portal\" \"npm run dev:admin\"",
    "dev:all": "npm run clean && concurrently \"npm run dev:server\" \"npm run dev:portal\" \"npm run dev:admin\"",
    "build": "vite build",
    "build:portal": "vite build",
    "build:admin": "vite build --config vite.admin.config.js",
    "build:both": "npm run build:portal && npm run build:admin",
    "preview": "vite preview",
    "preview:portal": "vite preview",
    "preview:admin": "vite preview --config vite.admin.config.js",
    "test:api": "node test-api.js",
    "start": "node src/server/index.js",
    "start:production": "NODE_ENV=production node start-https-production.js",
    "install:all": "./install.sh"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.5.21",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "echarts": "^5.4.3",
    "element-plus": "^2.10.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pinia": "^2.1.7",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.6",
    "vue": "^3.5.21",
    "vue-echarts": "^6.6.1",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@heroicons/vue": "^2.0.18",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^9.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10"
  },
  "keywords": [
    "vue",
    "ecommerce",
    "shop",
    "tailwindcss",
    "mobile-first",
    "responsive",
    "thai-language"
  ],
  "author": "Felix",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
