# ===========================================
# 轻量化商城系统 - 环境配置文件
# ===========================================

# 应用基础配置
NODE_ENV=production
PORT=3000
APP_NAME=Universal Shop
APP_VERSION=1.0.0

# 数据库配置
DATABASE_PATH=./database/shop.sqlite
DATABASE_LOGGING=false

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# 系统配置
DEFAULT_LANGUAGE=th-TH
CURRENCY_SYMBOL=฿
FREE_SHIPPING_THRESHOLD=500

# 安全配置
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 邮件配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@yourshop.com

# 支付配置（可选）
PAYMENT_GATEWAY=
PAYMENT_API_KEY=
PAYMENT_SECRET_KEY=

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 开发模式配置
DEV_PORTAL_PORT=3001
DEV_ADMIN_PORT=3002
DEV_API_PORT=3000
